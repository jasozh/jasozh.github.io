/* Write your global styles here, in PostCSS syntax */
@tailwind base;

@layer base {
  a {
    @apply tw-text-blue-600 tw-underline dark:tw-text-blue-500;
  }
  ul {
    @apply tw-list-inside tw-pl-1;
  }
  p {
    @apply tw-mb-4;
  }
  h1 {
    @apply tw-text-4xl sm:tw-text-6xl;
  }
  h2 {
    @apply tw-text-3xl sm:tw-text-4xl;
  }
}

@tailwind components;

@tailwind utilities;
