/* Write your global styles here, in PostCSS syntax */
@tailwind base;

@layer base {
  a {
    @apply tw-text-blue-600 hover:tw-underline;
  }
  p {
    @apply tw-mb-4;
  }
  h1 {
    @apply tw-text-4xl sm:tw-text-6xl;
  }
  h2 {
    @apply tw-text-3xl sm:tw-text-4xl;
  }
}

@tailwind components;

@tailwind utilities;
